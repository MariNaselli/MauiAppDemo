<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppDemo"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppDemo"
    xmlns:views="clr-namespace:MauiAppDemo.Views"
    >

    <ShellItem>
        <ShellSection>
            <ShellContent Route="login" ContentTemplate="{DataTemplate views:LoginView}" Title="Login"/>
        </ShellSection>
    </ShellItem>

    <ShellItem>
        <ShellSection>
            <ShellContent Route="home" ContentTemplate="{DataTemplate views:HomePageView}" Title="Home"/>
        </ShellSection>
    </ShellItem>

    <ShellItem>
        <ShellSection>
            <ShellContent Route="createaccount" ContentTemplate="{DataTemplate views:CreateAccountView}" Title="Create Account"/>
        </ShellSection>
    </ShellItem>

</Shell>

<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppDemo.PrivateShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppDemo"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiAppDemo"
    xmlns:views="clr-namespace:MauiAppDemo.Views"
    >

    <FlyoutItem Title="App">
        <ShellSection Title="Home">
            <ShellContent Route="home" ContentTemplate="{DataTemplate views:HomePage}" />
        </ShellSection>
        <ShellSection Title="Profile">
            <ShellContent Route="profile" ContentTemplate="{DataTemplate views:ProfilePage}" />
        </ShellSection>
    </FlyoutItem>

  
    <MenuItem Text="Logout" Command="{Binding LogoutCommand}" />

</Shell>

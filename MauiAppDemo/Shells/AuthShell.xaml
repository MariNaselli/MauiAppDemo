<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppDemo.Views.AuthShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiAppDemo.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Authentication">

    <ShellItem Title="Account">
        <ShellSection Title="Login">
            <ShellContent Route="login" ContentTemplate="{DataTemplate views:LoginView}" />
        </ShellSection>
        <ShellSection Title="Create Account">
            <ShellContent Route="createaccount" ContentTemplate="{DataTemplate views:CreateAccountView}" />
        </ShellSection>
    </ShellItem>
</Shell>
